{
    "scopeName": "markdown.allay.injection",
    "injectionSelector": "L:text.html.markdown, L:text.html",
    "patterns": [
        { "include": "#command-block" },
        { "include": "#expression-block" },
        { "include": "#shortcode-block" }
    ],
    "repository": {
        "patterns-base": {
            "patterns": [
                {
                    "comment": "Keywords like set, for, if, etc. from commands.md",
                    "match": "\\b(set|for|with|if|else|end|include|get|param)\\b",
                    "name": "keyword.control.allay"
                },
                {
                    "comment": "Variables like $var, $index from variables.md",
                    "match": "(\\$)[a-zA-Z_][a-zA-Z0-9_]*",
                    "captures": {
                        "1": { "name": "punctuation.definition.variable.allay" },
                        "0": { "name": "variable.parameter.allay" }
                    },
                    "name": "variable.parameter.allay"
                },
                {
                    "comment": "Preset variables like this, site from variables.md",
                    "match": "\\b(this|site|pages)\\b",
                    "name": "variable.language.allay"
                },
                {
                    "comment": "Field access like .name, .address.city from variables.md",
                    "match": "(\\.)([a-zA-Z_][a-zA-Z0-9_]*)",
                    "captures": {
                        "1": { "name": "punctuation.accessor.allay" },
                        "2": { "name": "entity.name.field.allay" }
                    }
                },
                {
                    "comment": "Strings from allay.pest",
                    "name": "string.quoted.double.allay",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        { "match": "\\\\.", "name": "constant.character.escape.allay" }
                    ]
                },
                {
                    "comment": "Numbers from allay.pest",
                    "match": "\\b[0-9]+\\b",
                    "name": "constant.numeric.allay"
                },
                {
                    "comment": "Booleans and null from allay.pest",
                    "match": "\\b(#t|#f|null)\\b",
                    "name": "constant.language.allay"
                },
                {
                    "comment": "Operators from allay.pest",
                    "match": "==|!=|<=|>=|<|>|&&|\\|\\||\\+|-|\\*|/|%|!",
                    "name": "keyword.operator.allay"
                }
            ]
        },
        "command-block": {
            "comment": "Command block {- ... -} from commands.md",
            "name": "meta.embedded.block.command.allay",
            "begin": "({-)",
            "end": "(-})",
            "beginCaptures": {
                "1": { "name": "punctuation.definition.tag.begin.allay" }
            },
            "endCaptures": {
                "1": { "name": "punctuation.definition.tag.end.allay" }
            },
            "patterns": [
                { "include": "#patterns-base" }
            ]
        },
        "expression-block": {
            "comment": "Expression block {: ... :} from commands.md",
            "name": "meta.embedded.block.expression.allay",
            "begin": "({:)",
            "end": "(:})",
            "beginCaptures": {
                "1": { "name": "punctuation.definition.tag.begin.allay" }
            },
            "endCaptures": {
                "1": { "name": "punctuation.definition.tag.end.allay" }
            },
            "patterns": [
                { "include": "#patterns-base" }
            ]
        },
        "shortcode-block": {
            "comment": "Shortcode tags {< ... >}, {< ... />}, {</ ... >} from shortcode.md",
            "patterns": [
                {
                    "comment": "Shortcode open tag {< tag ... >} or self-closing {< tag ... />}",
                    "name": "meta.tag.shortcode.open.allay",
                    "begin": "({<)\\s*([a-zA-Z0-9_-]+)",
                    "end": "(/>}|>})",
                    "beginCaptures": {
                        "1": { "name": "punctuation.definition.tag.begin.allay" },
                        "2": { "name": "entity.name.tag.shortcode.allay" }
                    },
                    "endCaptures": {
                        "1": { "name": "punctuation.definition.tag.end.allay" }
                    },
                    "patterns": [
                        { "include": "#patterns-base" }
                    ]
                },
                {
                    "comment": "Shortcode close tag {</ tag >}",
                    "name": "meta.tag.shortcode.close.allay",
                    "match": "({</)\\s*([a-zA-Z0-9_-]+)\\s*(>})",
                    "captures": {
                        "1": { "name": "punctuation.definition.tag.begin.allay" },
                        "2": { "name": "entity.name.tag.shortcode.allay" },
                        "3": { "name": "punctuation.definition.tag.end.allay" }
                    }
                }
            ]
        }
    }
}